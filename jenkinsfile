pipeline {
	agent any 
	
	tools {
        maven 'Maven' // Ensure this matches the name of your Maven installation in Jenkins
    }
    
	stages  {
		stage('Build Exchange') {
	
			environment {
				EXCHANGE_VERSION = '1.0.6'
			}
		
			steps {
				bat 'mvn -B -U -e -V clean deploy -s settings.xml -Danypoint.exchange="%EXCHANGE_VERSION%"'
			}
		}
		
		stage('Deployment') {
			steps {
				bat 'mvn -U -V -e -B -DskipTests clean deploy -DmuleDeploy'
			}
		}
	}
}